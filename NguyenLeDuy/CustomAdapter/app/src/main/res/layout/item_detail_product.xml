<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:weightSum="6">

    <TextView
        android:id="@+id/product_detail_id"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="Ma san pham"
        android:paddingLeft="7dp"/>

    <TextView
        android:id="@+id/product_detail_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="Ten san pham"
        android:paddingLeft="7dp"
        />

    <TextView
        android:id="@+id/product_detail_unit"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="Don vi tinh"
        android:paddingLeft="7dp"/>

    <TextView
        android:id="@+id/product_detail_price"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="Gia tien"
        android:paddingLeft="7dp"/>

    <EditText
        android:id="@+id/product_detail_amount"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:hint="0"
        android:paddingLeft="7dp"/>
    <TextView
        android:id="@+id/product_detail_sumprice"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:text="Thanh tien"
        android:layout_weight="1"/>

</LinearLayout>